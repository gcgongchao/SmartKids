<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        android:id="@+id/dl_left"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
    <!--主布局-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"></LinearLayout>


        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ui_shape_demo"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_home"
                android:layout_width="0dp"
                android:padding="5dp"
                android:drawableTop="@android:drawable/ic_menu_add"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:clickable="true"
                android:text="主页"
                android:textColor="@drawable/selector_text_color_pressed_gray_to_blue"
                android:textSize="@dimen/txt_size_17"/>

            <TextView
                android:id="@+id/btn_active"
                android:padding="5dp"
                android:clickable="true"

                android:drawableTop="@drawable/selector_drawable_pressed_white_to_blue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="动态"
                android:textColor="@drawable/selector_text_color_pressed_gray_to_blue"
                android:textSize="@dimen/txt_size_17"/>

            <TextView
                android:id="@+id/btn_doc"
                android:layout_width="0dp"
                android:clickable="true"

                android:padding="5dp"
                android:drawableTop="@drawable/selector_drawable_pressed_white_to_blue"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="名医"
                android:textColor="@drawable/selector_text_color_pressed_gray_to_blue"
                android:textSize="@dimen/txt_size_17"/>

            <TextView
                android:id="@+id/btn_tools"
                android:clickable="true"

                android:layout_width="0dp"
                android:padding="5dp"
                android:drawableTop="@drawable/selector_drawable_pressed_white_to_blue"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="百宝箱"
                android:textColor="@drawable/selector_text_color_pressed_gray_to_blue"
                android:textSize="@dimen/txt_size_17"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_above="@id/ll_bottom"
            android:background="@color/transparent_black"
            android:layout_height="1px"/>
    </RelativeLayout>
    <!--侧滑菜单-->
    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:background="#fff"
        android:layout_gravity="start">

        <TextView
            android:id="@+id/test"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_marginTop="48dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="用户中心"
            android:textColor="@drawable/selector_text_color_pressed_gray_to_blue"
            android:textSize="@dimen/txt_size_17"/>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>